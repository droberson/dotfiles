# Basic settings
startup_message off
vbell off

# Control+left / Control+right switches screens
bindkey ^[[1;5D prev
bindkey ^[[1;5C next

# Status bar
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}%-Lw%{= kW}%50> %n*%f %t%{= kG}%+Lw%< %{= kG}%-=%D %m/%d/%Y %C:%s %A %1`%{-}'

# Lock screen after 60 minutes of inactivity
idle 3600 lockscreen

